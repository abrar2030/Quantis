# Quantis API Environment Configuration

# Application Settings
APP_NAME=Quantis API
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Security Settings - CHANGE THESE IN PRODUCTION!
SECRET_KEY=your-secret-key-change-this-in-production-use-a-long-random-string
JWT_SECRET=your-jwt-secret-change-this-in-production-use-a-long-random-string

# Database Settings (SQLite by default for development)
# Leave these empty/commented to use SQLite
# For PostgreSQL:
# POSTGRES_USER=quantis
# POSTGRES_PASSWORD=your_password
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=quantis

# For MySQL:
# MYSQL_USER=quantis
# MYSQL_PASSWORD=your_password
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_DB=quantis

# Redis Settings (optional - leave empty to run without Redis)
# REDIS_URL=redis://localhost:6379/0

# Celery Settings (optional - for background tasks)
# CELERY_BROKER_URL=redis://localhost:6379/0

# Email Settings (optional - for notifications)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_email_password
# SMTP_USE_TLS=true

# CORS Settings
CORS_ORIGINS=*

# Logging
LOG_LEVEL=INFO
ENABLE_AUDIT_LOGGING=true

# Compliance
ENABLE_DATA_RETENTION_POLICIES=false
ENABLE_CONSENT_MANAGEMENT=false
ENABLE_DATA_MASKING=false
ENABLE_DATA_ENCRYPTION=false
